<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.didyouknow.ui.viewmodels.AddpostFragmentViewModel"
        />

    </data>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.AddPostFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            android:elevation="12dp"
            app:subtitleTextColor="@color/toolbar_text"
            app:titleTextColor="@color/toolbar_text" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="cancel"
                    android:textColor="#FF3F3F"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/postButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Post"
                    android:textColor="#0087FF"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/add_post_fragment_background"
            android:paddingBottom="47dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="22dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/imgPrevContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/postImagePrev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_placeholder" />

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/blogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/textfiled_shape"
                    android:gravity="top|left"
                    android:hint="Blog title goes here..."
                    android:maxLines="3"
                    android:minLines="2"
                    android:overScrollMode="always"
                    android:padding="14dp"
                    android:text="@{viewmodel.postTitle}"
                    android:textColorHint="@color/add_post_hint"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageLinkBoxContainer" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageLinkBoxContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgPrevContainer">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/imageChooseButotn"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:backgroundTint="@{viewmodel.isLocalImage() ? @color/button_color_red : @color/black }"
                        app:cornerRadius="100dp"
                        app:icon="@{viewmodel.isLocalImage() ? @drawable/ic_cancel : @drawable/ic_add }"
                        app:iconTint="@color/add_post_fragment_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageLinkBoxContainer"
                        app:layout_constraintTop_toTopOf="@+id/blogImageLink"
                        app:rippleColor="#2A474747" />

                    <EditText
                        android:id="@+id/blogImageLink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/textfiled_shape"
                        android:enabled="@{!viewmodel.isLocalImage() }"
                        android:gravity="top|left"
                        android:hint="Image Link"
                        android:text="@{ viewmodel.isLocalImage() ? viewmodel.LocalImageTxtPlaceholder : viewmodel.postimgLink }"
                        android:maxLines="1"
                        android:overScrollMode="always"
                        android:paddingStart="14dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="18dp"
                        android:textColorHint="@color/add_post_hint"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageChooseButotn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <EditText
                    android:id="@+id/blogContent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/textfiled_shape"
                    android:gravity="top|left"
                    android:hint="Blog content goes here..."
                    android:maxLines="20"
                    android:minLines="20"
                    android:overScrollMode="always"
                    android:padding="14dp"
                    android:textColorHint="@color/add_post_hint"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blogTitle" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

</layout>